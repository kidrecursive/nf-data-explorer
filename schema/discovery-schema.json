        "properties": {
          "name": {
            "$id": "#/items/anyOf/0/properties/name",
            "type": "string",
            "title": "The cluster name",
            "description": "Name of the cluster to connect to.",
            "default": "",
            "examples": ["TEST"]
          },
          "env": {
            "$id": "#/items/anyOf/0/properties/env",
            "type": "string",
